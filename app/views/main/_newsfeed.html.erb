<div id = "newsfeed">
<div id="filter">

<% form_tag( { :action => :index }, { :method => :post }) do -%>
<%= label_tag :user_friend_location, "Search your friends' travel updates" %>
<%= text_field_tag :user_friend_location, '', :size => 20  %>
<%= submit_tag "Filter" %>
<% end -%>
</div>
<ul>
<% @postings.each do |posting| %>
	<li>
  	<span class="artifact_name"><%= posting.friend.social_network_handle %></span><br />
  	<span class="artifact_content"><%= posting.content %></span><br />
    <span class = "artifact_time">	Posted on <%= posting.when_posted.strftime('%B %d, %Y') %></span><br />
	</li>
<% end %>
</ul>
</div>