<h1>Login</h1>

<div id="login">
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :login %> 
  <%= f.text_field :login, :size  => 15 %> <br />
  
  <%= f.label :password %>
  <%= f.password_field :password, :size  => 15 %>
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>
<% end %>
</div>
